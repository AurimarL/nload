{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "bun run build --watch",
    "build": "tsc -b -v",
    "payload:types": "PAYLOAD_CONFIG_PATH=src/payload/payload.config.ts bunx payload generate:types"
  },
  "main": "./dist/entry.js",
  "types": "./dist/entry.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/entry.js",
      "require": "./dist/entry.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^22.10.7",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@payloadcms/db-postgres": "^3.60.0",
    "@payloadcms/db-sqlite": "^3.60.0",
    "sharp": "^0.34.4"
  }
}